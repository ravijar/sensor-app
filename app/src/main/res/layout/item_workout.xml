<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:backgroundTint="@color/P2"
    android:background="@drawable/card_background"
    android:padding="20dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <!-- Details Section -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/workoutDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/workoutMonthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/workoutTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- View Button -->
    <ImageButton
        android:id="@+id/viewWorkoutButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/past_workouts_view_summary_button"
        android:backgroundTint="@color/S3"
        android:contentDescription="View Workout"
        android:scaleType="centerInside"
        android:src="@drawable/ic_past_workouts_view_summary_arrow" />
</LinearLayout>
