<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView android:id="@+id/accelX" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="X: "/>
    <TextView android:id="@+id/accelY" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Y: "/>
    <TextView android:id="@+id/accelZ" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Z: "/>
    <TextView android:id="@+id/biasX" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Bias X: "/>
    <TextView android:id="@+id/biasY" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Bias Y: "/>
    <TextView android:id="@+id/biasZ" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Bias Z: "/>
</LinearLayout>
